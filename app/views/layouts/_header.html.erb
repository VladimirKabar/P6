<div class="main-container">
  <header class="spa-header style-01">
    <div class="header-top">
      <div class="container">
        <div class="row">
          <div class="col-md-9 col-sm-9 col-xs-12">
            <div class="spa-location">
            </div>
            <div class="col-md-3 col-sm-3">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="header-bottom">
      <div class=".container-fluid">
        <div class="row">
          <div class="col-md-1 col-md-push-2">
            <%= link_to (image_tag ('logo.jpg'), alt: 'Ukryty przycisk do panelu admina', title: 'Ukryty przycisk do panelu admina'), rails_admin_path %>
          </div>
          <div class="col-md-5 col-md-push-6">
            <nav class="spa-menu-top">
              <ul>
                <li><%= link_to "Home", root_path %>
                </li>
                <li><%= link_to "Projekty", projects_path %>
                </li>
                <li><%= link_to "Kontakt", kontakt_path %>
                </li>
                <% if user_signed_in? %>
                    <li> <%= link_to("Wyloguj", destroy_user_session_path, :method => :delete) %>
                    </li>
                <% end %>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </header>
</div>


