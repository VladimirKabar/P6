<% provide(:title, 'Kontakt') %>

<%= content_for :page_title do %>
  <section class="spa-area spa-area-11">
    <h3 class="spa-breakrum-title">Kontakt</h3>
  </section>
<% end %>

<section class="spa-area white-text-style spa-area-15">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-push-3">

        <div class="widget spa-widget-contact-form">
          <div class="widget-header style-12">
            <span class="sub-title style-03">Wyślij wiadomość </span>
            <h3 class="widget-title style-09">Formularz kontaktowy</h3>
          </div>
          <div class="widget-content">
            <div class="spa-contact-form">
              <%= form_tag('mail') do %>
                  <p>
                    <%= text_field_tag :name, '', :placeholder => 'Imię i nazwisko', required: true %>
                  </p>
                  <p>
                    <%= email_field_tag :email, '', :placeholder => 'Email', required: true %>
                  </p>
                  <p>
                    <%= text_area_tag :content, '', :placeholder => 'Treść wiadomości', required: true %>
                  </p>

                  <div class="spa-submit">
                    <p>
                      <%= submit_tag 'Wyślij wiadomość' %>
                    </p>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
