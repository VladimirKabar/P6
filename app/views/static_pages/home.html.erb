<% provide(:title, "Strona główna") %>

<!-- start content -->

<div id="content">
  <!-- <h1>strona główna</h1> -->
  <div id="rotate" style="display:none;">
    <%= image_tag ('index1.jpeg') %>
    <%= image_tag ('index2.jpeg') %>
    <%= image_tag ('index3.jpeg') %>
    <%= image_tag ('index4.jpeg') %>
    <%= image_tag ('index5.jpeg') %>
    <%= image_tag ('index6.jpeg') %>
  </div>
  <script type="text/javascript">$(document).ready(function () {
    $('#rotate').css('display', 'block');
    $('#rotate').cycle({fx: 'fade', timeout: 1000, after: onAfter, speed: 3000});
  });
  function onAfter(curr, next, opts, fwd) {
    var $ht = $(this).height();
    $(this).parent().animate({height: $ht});
  }
  </script>
</div>

